all.javac.release = 11

main {
  hasMacros = true
  implementsMacros = true
  compile {
    modules = [
      optimus.platform.alarms,
      optimus.platform.annotations,
      optimus.platform.core_macro,
      optimus.platform.scala_compat,
      optimus.platform.spray_json,
      optimus.platform.stagingplugin,
    ]
    libs = [
      fsf.zookeeper,
      optimus.jsr310-date-time,
      ossjava.args4j,
      ossjava.caffeine,
      ossjava.commons-io,
      ossjava.commons-text,
      ossjava.curator,
      ossjava.guava,
      ossjava.hkdf,
      ossjava.jakarta.activation,
      ossjava.javamail,
      // TODO (OPTIMUS-62064): javassist is only here so that we can patch javassist.bytecode.MethodParametersAttribute.
      // Remove the javassist dependency once we no longer need that patch
      ossjava.javassist,
      ossjava.javax.activation,
      ossjava.jettison,
      ossjava.logback,
      ossjava.netty,
      ossjava.opencsv,
      ossjava.slf4j,
      ossjava.zstd-jni
    ]
    mavenLibs = [
      args4j.args4j,
      at.favre.lib.hkdf,
      ch.qos.logback.logback-classic,
      com.github.ben-manes.caffeine.caffeine,
      com.github.luben.zstd-jni
      com.google.guava.guava,
      com.ms.infra.rr.kerberos,
      com.ms.spgbc.cslshared.optimus-optimus_jsr310-date-time,
      com.opencsv.opencsv,
      com.sun.mail.javax.mail,
      commons-io.commons-io,
      io.netty.netty-all,
      org.apache.commons.commons-text,
      org.apache.curator.curator-client,
      org.apache.curator.curator-framework,
      org.apache.curator.curator-recipes,
      org.apache.zookeeper.zookeeper,
      org.codehaus.jettison.jettison,
      // TODO (OPTIMUS-62064): javassist is only here so that we can patch javassist.bytecode.MethodParametersAttribute.
      // Remove the javassist dependency once we no longer need that patch
      org.javassist.javassist,
      org.scala-lang.modules.scala-xml_2.12,
      org.slf4j.slf4j-api
    ]
  }
  compileOnly.modules += optimus.platform.legacy-jdk-api-stubs.mbeans
  runtime.libs += msjava.jprofiler
}

test {
  hasMacros = true // We need that for now due to limitation of stratosphere
  compile {
    modules += optimus.platform.utils
    libs = [
      msjava.jprofiler,
      ossjava.junit,
      ossscala.scalactic,
      ossscala.scalatest,
      ossscala.scalatestplus-junit-4-12,
    ]
  }
}